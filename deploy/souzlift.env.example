# Общие настройки Django
DJANGO_ENV=prod
DJANGO_SECRET_KEY=replace-me
DJANGO_ALLOWED_HOSTS=example.com,www.example.com
DJANGO_CSRF_TRUSTED_ORIGINS=https://example.com,https://www.example.com

# Пути
DJANGO_DB_PATH=/opt/souzlift/backend/db/db.sqlite3
DJANGO_STATIC_ROOT=/opt/souzlift/backend/staticfiles
DJANGO_MEDIA_ROOT=/opt/souzlift/backend/media
DJANGO_LOG_DIR=/var/log/souzlift
DJANGO_LOG_FILE=/var/log/souzlift/app.log
DJANGO_LOG_MAX_BYTES=10485760
DJANGO_LOG_BACKUP_COUNT=10

# Почта (пример для SMTP)
DJANGO_EMAIL_HOST=smtp.example.com
DJANGO_EMAIL_PORT=587
DJANGO_EMAIL_HOST_USER=mailer@example.com
DJANGO_EMAIL_HOST_PASSWORD=change-me
DJANGO_EMAIL_USE_TLS=true
DJANGO_DEFAULT_FROM_EMAIL=Souzlift Audit <no-reply@example.com>
DJANGO_EMAIL_NOTIFICATIONS_ENABLED=false

# HTTPS и безопасность
DJANGO_SECURE_SSL_REDIRECT=true
DJANGO_SECURE_HSTS_SECONDS=31536000
DJANGO_SECURE_HSTS_INCLUDE_SUBDOMAINS=true
DJANGO_SECURE_HSTS_PRELOAD=true
DJANGO_SECURE_REFERRER_POLICY=strict-origin-when-cross-origin
